<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/sidemenu_home_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_home"
        android:drawablePadding="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="HOME"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/sidemenu_search_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_search"
        android:drawablePadding="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="検索"
        android:textColor="@color/black"
        android:textSize="18sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
    
    <TextView
        android:id="@+id/sidemenu_ranking_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_ranking"
        android:drawablePadding="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="ランキング"
        android:textColor="@color/black"
        android:textSize="18sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
    
    <TextView
        android:id="@+id/sidemenu_favorite_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_star_on"
        android:drawablePadding="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="お気に入り"
        android:textColor="@color/black"
        android:textSize="18sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/sidemenu_bookmark_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_bookmark"
        android:drawablePadding="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="しおり"
        android:textColor="@color/black"
        android:textSize="18sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
    
    <TextView
        android:id="@+id/sidemenu_history_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_history"
        android:drawablePadding="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="閲覧履歴"
        android:textColor="@color/black"
        android:textSize="18sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/sidemenu_setting_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/icon_setting"
        android:drawablePadding="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="設定"
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>